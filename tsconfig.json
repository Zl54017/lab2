{
    "compilerOptions": {
      "module": "commonjs",
      "target": "es6",
      "outDir": "./dist",
      "rootDir": "./src",
      "esModuleInterop": true,
      "moduleResolution": "node",
      "strictNullChecks": true,
      "noImplicitAny": true,
      "declaration": true,
      "skipLibCheck": true
    },
    "include": ["src/**/*.ts"],
    "exclude": ["node_modules"]
  }
  