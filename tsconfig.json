{
    "compilerOptions": {        
        "rootDir": "./src",    
        "outDir": "./dist",    
        "declaration": true,
        "strictNullChecks": true,
        "noImplicitAny": true,
        "esModuleInterop": true,
        "moduleResolution": "node",
        "target": "es6",
        "module": "commonjs",
    },
    "include": ["src/**/*.ts"],
    "exclude": ["node_modules"]
}
